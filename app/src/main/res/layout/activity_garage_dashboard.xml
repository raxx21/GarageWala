                    android:layout_marginTop="20dp"
                    android:background="@color/yellow"
                    android:elevation="25dp"
                    android:layout_gravity="center"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/mp_title1"
                        android:layout_width="wrap_content"
