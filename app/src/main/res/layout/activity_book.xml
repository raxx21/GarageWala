<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f9f9"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >

            <ImageView
                android:id="@+id/ham"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:transitionName="search_back"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/muli_bold"
                        android:text="GarageWala"
                        android:textSize="28sp"
                        android:transitionName="search_title"
                        />

                    <RelativeLayout
                        android:id="@+id/search_bar"
                        android:transitionName="search_title"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/app_name"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/white"
                        android:elevation="8dp">

                        <EditText
                            android:id="@+id/serach_area"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text=""
                            android:layout_marginLeft="5dp"
                            android:hint="Search By Area..."
                            android:background="@null"
                            android:fontFamily="@font/muli"/>

                        <ImageView
                            android:id="@+id/serach_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/ic_baseline_search_24"
                            android:transitionName="serach_icon"/>

                    </RelativeLayout>


                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Booking is Successfully Done!"
                    android:textColor="@color/yellow"
                    android:textSize="20dp"
                    android:fontFamily="@font/muli_bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To know more go to home!"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/muli_bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>



        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>